## --------------------------- LIVCHAT --------------------------- ##

  chatwoot_redis:
    image: redis:latest
    command: [
        "redis-server",
        "--appendonly",
        "yes",
        "--port",
        "6379"
      ]

    volumes:
      - chatwoot_redis:/data

    networks:
      - {{ network_name }}

    deploy:
      placement:
        constraints:
          - node.role == manager
