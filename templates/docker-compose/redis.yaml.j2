version: "3.7"
services:

## --------------------------- LIVCHAT --------------------------- ##

  redis:
    image: redis:latest
    command: [
        "redis-server",
        "--requirepass", "{{ redis_password }}",
        "--port", "6379"
      ]

    volumes:
      - redis_data:/data

    networks:
      - {{ network_name }}

    ## Descomente as linhas abaixo para uso externo
    #ports:
    #  - 6379:6379

    environment:
      - TZ=America/Sao_Paulo

    deploy:
      placement:
        constraints:
          - node.role == manager
      resources:
        limits:
          cpus: "1"
          memory: 2048M

## --------------------------- LIVCHAT --------------------------- ##

volumes:
  redis_data:
    external: true
    name: redis_data

networks:
  {{ network_name }}:
    external: true
    name: {{ network_name }}
